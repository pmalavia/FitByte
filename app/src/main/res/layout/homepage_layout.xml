<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:background="@drawable/bg_blackblue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="20/30/2000"
            android:id="@+id/tvDate"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Calories To Consume"
            android:id="@+id/cal_remaining"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvCaloriesRemaining"
            android:layout_below="@+id/cal_remaining"
            android:layout_alignRight="@+id/cal_remaining"
            android:layout_alignEnd="@+id/cal_remaining"
            android:layout_marginRight="37dp"
            android:layout_marginEnd="37dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"
            android:id="@+id/tvName"
            android:layout_below="@+id/tvCaloriesRemaining"
            android:layout_alignLeft="@+id/cal_remaining"
            android:layout_alignStart="@+id/cal_remaining" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="goal input"
            android:id="@+id/tvWeightGoal"
            android:layout_below="@+id/tvName"
            android:layout_alignLeft="@+id/tvName"
            android:layout_alignStart="@+id/tvName"
            android:layout_marginTop="26dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="time remaining"
            android:id="@+id/tvTimeLeft"
            android:layout_above="@+id/tvGoal"
            android:layout_alignLeft="@+id/tvWeightGoal"
            android:layout_alignStart="@+id/tvWeightGoal"
            android:layout_marginBottom="29dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Goal:"
            android:id="@+id/goal_text"
            android:layout_marginTop="85dp"
            android:layout_marginRight="29dp"
            android:layout_marginEnd="29dp"
            android:layout_below="@+id/tvWeightGoal"
            android:layout_alignRight="@+id/tvDate"
            android:layout_alignEnd="@+id/tvDate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gained:"
            android:id="@+id/gained_text"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/goal_text"
            android:layout_alignLeft="@+id/goal_text"
            android:layout_alignStart="@+id/goal_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Burned:"
            android:id="@+id/burn_text"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/gained_text"
            android:layout_alignRight="@+id/gained_text"
            android:layout_alignEnd="@+id/gained_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Net:"
            android:id="@+id/net_text"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/burn_text"
            android:layout_alignLeft="@+id/gained_text"
            android:layout_alignStart="@+id/gained_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0000"
            android:id="@+id/tvGoal"
            android:layout_above="@+id/gained_text"
            android:layout_alignRight="@+id/tvWeightGoal"
            android:layout_alignEnd="@+id/tvWeightGoal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0000"
            android:id="@+id/tvCalConsumed"
            android:layout_above="@+id/burn_text"
            android:layout_alignLeft="@+id/tvGoal"
            android:layout_alignStart="@+id/tvGoal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0000"
            android:id="@+id/tvCalBurned"
            android:layout_alignBottom="@+id/burn_text"
            android:layout_alignLeft="@+id/tvCalConsumed"
            android:layout_alignStart="@+id/tvCalConsumed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0000"
            android:id="@+id/tvNet"
            android:layout_alignTop="@+id/net_text"
            android:layout_alignLeft="@+id/tvCalBurned"
            android:layout_alignStart="@+id/tvCalBurned" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profile"
            android:id="@+id/profilePicture"
            android:layout_alignTop="@+id/tvName"
            android:layout_alignRight="@+id/tvDate"
            android:layout_alignEnd="@+id/tvDate" />

    </RelativeLayout>

    <ListView android:id="@+id/list_layout"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#000"/>
</android.support.v4.widget.DrawerLayout>
